<body>

  <h1> A Reason to Drink Fantasy League </h1>
  <p>Draft Date: August 25th at 6 PM</p>
  <p>Are you in?</p>

  <form action="https://formspree.io/f/xqalbppj" method="POST" id="rsvpForm">
    <input type="text" name="name" placeholder="Your name" required /><br />
    
    <label>
      <input type="radio" name="response" value="Yes" required />
      Yes
    </label>
    <label>
      <input type="radio" name="response" value="No" required />
      No
    </label><br />

    <button type="submit">Submit</button>
  </form>

  <div class="thank-you" id="thankYouMessage">
     Thanks for your response!
  </div>

  <script>
    const form = document.getElementById('rsvpForm');
    const thankYouMessage = document.getElementById('thankYouMessage');

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      const formData = new FormData(form);
      fetch(form.action, {
        method: form.method,
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      }).then(response => {
        if (response.ok) {
          form.style.display = 'none';
          thankYouMessage.style.display = 'block';
        } else {
          alert('There was an issue. Try again later.');
        }
      });
    });
  </script>

